{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Image thumbnail",
        "description": "JOSN Patch and Image thumbnail",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "tags": [{
        "name": "Users",
        "description": "API for users login"
    }],
    "schemes": [
        "http"
    ],
    "paths": {
        "/api/users/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "description": "User Logged in",
                "parameters": [{
                    "name": "user",
                    "in": "body",
                    "description": "Login Payload",
                    "schema": {
                        "$ref": "#/definitions/User"
                    }
                }],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Token is  created",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        },

        "/api/create-thumbnail": {
            "post": {
                "tags": [
                    "Image Thumbnail"
                ],
                "description": "Image thumbnail",
                "parameters": [{
                    "name": "ImageUrl",
                    "in": "body",
                    "description": "Put your  Public image  URL ",
                    "schema": {
                        "$ref": "#/definitions/imageUrl"
                    }
                }],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Image thumbnail created",
                        "schema": {
                            "$ref": "#/definitions/imageUrl"
                        }
                    }
                }
            }
        },
        "/api/patch-object": {
            "patch": {
                "tags": [
                    "Json Patch"
                ],
                "description": "Json patch",
                "parameters": [{
                    "name": "Json Object & Json Patch Object",
                    "in": "body",
                    "description": "Creating Json Patch Object",
                    "schema": {
                        "$ref": "#/definitions/Json"
                    }
                }],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Patch generated successfully",
                        "schema": {
                            "$ref": "#/definitions/Json_patch"
                        }
                    }
                }
            }
        }

    }
}